<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textCursorDrawable">@drawable/black_text_cursor</item>
        <item name="android:statusBarColor">@color/white</item>

    </style>


    <style name="BaseTextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/custom_search</item>
        <item name="android:inputType">text</item>
        <item name="minHeight">40dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingEnd">11dp</item>
        <item name="android:paddingStart">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>

    </style>


</resources>